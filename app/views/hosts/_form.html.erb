<%= simple_form_for [:api, @host], html: {class: 'form-horizontal'} do |f| %>
  <%= render "/shared/error_messages", f: f %>
  <%= f.input :name, :name => 'name' %>
  <%= f.input :url, :name => 'url' %>
  <%= f.input :weight, :name => 'weight', input_html: { min: 0, max: 10 } %>
  <%= f.button :wrapped, :cancel => hosts_path %>
<% end %>
